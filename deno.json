{
    "compilerOptions": {
        "lib": ["deno.window"],
        "strict": true,
        "noErrorTruncation": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "noUncheckedIndexedAccess": true
    },
    "lint": {
        "include": ["src/"],
        "exclude": ["old/"],
        "rules": {
            "tags": ["recommended"],
            "include": ["ban-untagged-todo"],
            "exclude": []
        }
    },
    "fmt": {
        "useTabs": false,
        "lineWidth": 100,
        "indentWidth": 4,
        "semiColons": true,
        "singleQuote": true,
        "proseWrap": "preserve",
        "include": ["src/"],
        "exclude": ["old/"]
    },
    "lock": false,
    "nodeModulesDir": "none",
    "test": {
        "include": ["tests/"],
        "exclude": ["old/"]
    },
    "tasks": {
        "start": "deno run --env --allow-env --allow-net --allow-read --allow-write src/Main/start.ts ",
        "test": "deno test --coverage; deno coverage; deno coverage --html",
        "qa": "rm -rf coverage; deno check --all src/Main/start.ts && deno fmt && deno lint && deno test -A --coverage && deno coverage && deno coverage --html"
    },
    "imports": {
        "@oak/oak": "jsr:@oak/oak@^16.1.0",
        "@std/assert": "jsr:@std/assert@^1.0.3",
        "@std/cli": "jsr:@std/cli@^1.0.4",
        "@tajpouria/cors": "jsr:@tajpouria/cors@^1.2.1",
        "EnviroSense/": "./src/"
    }
}
